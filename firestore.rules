rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if current user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Helper function to check if user is authenticated staff
    function isStaff() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid));
    }
    
    // ============================================
    // UNIFIED INBOX - Messaging Collections
    // ============================================
    
    // Helper function to check if user is anonymous (website chat)
    function isAnonymousAuth() {
      return request.auth != null && 
        request.auth.token.firebase.sign_in_provider == 'anonymous';
    }
    
    // Messages: Staff read/write, anonymous can create inbound messages and read their conversation
    match /messages/{messageId} {
      allow read, write: if isStaff();
      // Website chat visitors can create inbound messages for their conversation
      allow create: if isAnonymousAuth() && 
        request.resource.data.direction == 'inbound' &&
        request.resource.data.channel == 'website';
      // Website chat visitors can read any messages where channel is website
      // Note: Query must include channel=='website' filter to match this rule
      allow read: if isAnonymousAuth();
    }
    
    // Customers: Staff read/write, anonymous can create their own customer record
    match /customers/{customerId} {
      allow read, write: if isStaff();
      // Website chat visitors can create their own customer record
      allow create: if isAnonymousAuth() && 
        request.resource.data.source == 'website_chat';
    }
    
    // Conversations: Staff read/write, anonymous can create website conversations
    match /conversations/{conversationId} {
      allow read, write: if isStaff();
      // Website chat visitors can create and update their own conversation
      allow create: if isAnonymousAuth() && 
        request.resource.data.channel == 'website';
      allow update: if isAnonymousAuth() && 
        resource.data.channel == 'website';
    }
    
    // Website Sessions: Staff read, anonymous can create/update their sessions
    match /website_sessions/{sessionId} {
      allow read: if isStaff();
      allow create, update: if isAnonymousAuth();
    }
    
    // AI Drafts: Staff read/write only (Phase 2+)
    match /aiDrafts/{draftId} {
      allow read, write: if isStaff();
    }
    
    // Suggested Actions: Staff read/write only (Phase 3+)
    match /suggestedActions/{actionId} {
      allow read, write: if isStaff();
    }
    
    // AI Learning: Staff read/write (for tracking draft usage)
    match /ai_learning/{learningId} {
      allow read, write: if isStaff();
    }
    
    // Booking Actions: Staff read/write (for tracking booking modifications)
    match /booking_actions/{actionId} {
      allow read, write: if isStaff();
    }
    
    // Staff Activity: Write for authenticated staff, read for all staff
    match /staffActivity/{activityId} {
      allow create: if isStaff() && request.auth.uid == request.resource.data.staffId;
      allow read: if isStaff();
    }
    
    // ============================================
    // Existing Collections
    // ============================================
    
    match /users/{userId} {
      // Users can read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // All authenticated users can read user documents
      allow read: if request.auth != null;
      // Users can create their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Admins can delete any user document
      allow delete: if request.auth != null && isAdmin();
      // Admins can update any user document
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    match /booking_status/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /pickup_assignments/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /shifts/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /reordered_bookings/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /updated_pickup_places/{document} {
      allow read, write: if request.auth != null;
    }
    
    match /bus_locations/{busId} {
      allow read, write: if request.auth != null;
    }
    
    match /location_history/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.resource.data.busId is string &&
        request.resource.data.userId is string &&
        request.resource.data.latitude is number &&
        request.resource.data.longitude is number &&
        request.resource.data.timestamp is timestamp;
    }

    match /buses/{busId} {
      allow read, write: if request.auth != null;
    }
    
    // Bus-guide assignments - authenticated users can read/write
    match /bus_guide_assignments/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Manual bookings - authenticated users can read/write
    match /manual_bookings/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Cached bookings - authenticated users can read/write
    match /cached_bookings/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Tour Reports - readable by authenticated users, writable by Cloud Functions only
    match /tour_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if false;  // Cloud Functions bypass rules, so this is fine
    }
    
    // End of shift reports
    match /end_of_shift_reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Aurora sightings - guides can create, all authenticated can read
    match /aurora_sightings/{sightingId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if false;  // Only Cloud Functions can update (processed flag)
    }
  }
} 